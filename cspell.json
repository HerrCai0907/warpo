{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "language": "en",
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "cspell/project-words.txt",
      "addWords": true
    }
  ],
  "dictionaries": ["project-words"],
  "ignorePaths": [
    "build/**",
    "*.svg",
    "passes/DoInlining.cpp",
    "passes/DoInlining.hpp",
    "third_party/**",
    "assemblyscript/**",
    "*.wat",
    "tests/frontend/compiler/**",
    "tests/DebugSymbol/*.txt"
  ]
}
